<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
        <!-- Required for Lollipop. -->
        <!--  <item name="android:overlapAnchor">false</item>
          <item name="android:dropDownVerticalOffset">4.0dip</item>-->
    </style>
   <!-- <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/text_size</item>&lt;!&ndash; text size in menu&ndash;&gt;
        <item name="android:listPreferredItemHeightSmall">40dp</item>&lt;!&ndash; item size in menu&ndash;&gt;
    </style>
-->
    <style name="MyMenu">
        <item name="android:textSize">@dimen/text_size</item> //size desired.
        <item name="android:background">#FFFFFF</item> //background
    </style>

    <style name="MenuTextStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>
