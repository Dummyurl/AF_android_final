<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:id="@+id/parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="1"
        android:padding="@dimen/event_full_layout_tv_mar_top"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="0.6"

            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="@dimen/event_full_layout_tv_padding"
                android:id="@+id/img_card"
                />

        </LinearLayout>



        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/event_full_layout_tv_mar_top"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_weight="0.4"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textSize="@dimen/text_size"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_card_add_name"
                    />

            </LinearLayout>
            <include layout="@layout/item_divider2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/u_phone"
                    android:text="@string/phone_icon"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/colorPrimary"
                    />

                <TextView
                    android:textSize="@dimen/text_size"

                    android:id="@+id/tv_card_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@+id/u_phone"
                    android:layout_marginLeft="10dp"
                    android:text="Contact No" />
            </RelativeLayout>
            <include layout="@layout/item_divider2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_icon"
                    android:id="@+id/email_id"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:id="@+id/tv_card_email"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size"
                    android:text="Email" />
            </RelativeLayout>
            <include layout="@layout/item_divider2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s_icon"
                    android:id="@+id/location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:id="@+id/tv_card_location"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@+id/location"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size"
                    android:text="location" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_card_view_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:layout_weight="0.5"
                    android:textColor="#FF1D36B3"
                    android:textSize="@dimen/text_size"
                    />

                <TextView
                    android:id="@+id/tv_card_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Remove"

                    android:textAlignment="center"
                    android:textColor="#FF1D36B3"
                    android:textSize="@dimen/text_size"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/item_divider2"/>
</LinearLayout>
