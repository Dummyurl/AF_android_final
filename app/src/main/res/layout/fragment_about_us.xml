<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.LeelaGroup.AgrawalFedration.AboutUs">

    <ScrollView
        android:layout_margin="@dimen/layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size"
                android:text="@string/AboutUsStatic" />

            <include layout="@layout/item_divider2"/>


            <TextView
                android:layout_marginTop="@dimen/layout_margin"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our services"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/about_us_heading_dimen"
                android:textStyle="bold" />
            <include layout="@layout/item_divider2"/>

            <TextView
                android:text="1.Medical"
                android:textSize="@dimen/about_us_heading_dimen"
                android:textColor="@color/edu_third"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_size"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/medical_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include layout="@layout/item_divider2"/>

            <TextView
                android:text="2.Education"
                android:textSize="@dimen/about_us_heading_dimen"
                android:textColor="@color/edu_third"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_size"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/education_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include layout="@layout/item_divider2"/>


            <TextView
                android:text="3.Matrimony"
                android:textSize="@dimen/about_us_heading_dimen"
                android:textColor="@color/edu_third"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_size"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/matrimony_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
