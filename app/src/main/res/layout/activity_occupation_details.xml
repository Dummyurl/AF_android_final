<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent"
    tools:context="com.LeelaGroup.AgrawalFedration.matrimony.OccupationDetailsActivity">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin"
               >

                    <com.LeelaGroup.AgrawalFedration.FontAwsome
                        android:id="@+id/per_occupatn"
                        android:layout_width="@dimen/cont_us_logo_width"
                        android:layout_height="wrap_content"
                        android:text="@string/occu_icon"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/form_tv_size"
                         />


                    <TextView
                        android:textSize="@dimen/text_size"

                        android:id="@+id/d_per_occupation"
                        android:layout_toEndOf="@+id/per_occupatn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     />
                </RelativeLayout>

                <include layout="@layout/item_divider1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_margin="@dimen/layout_margin"
                    >

                    <com.LeelaGroup.AgrawalFedration.FontAwsome
                        android:id="@+id/per_industry"
                        android:layout_width="@dimen/cont_us_logo_width"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/industry_icon"
                        android:textSize="@dimen/form_tv_size"
                         />


                    <TextView
                        android:textSize="@dimen/text_size"
                        android:id="@+id/d_per_industry"
                        android:layout_toEndOf="@+id/per_industry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

                <include layout="@layout/item_divider1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin"
                   >

                    <com.LeelaGroup.AgrawalFedration.FontAwsome
                        android:id="@+id/per_bsnsempat"
                        android:layout_width="@dimen/cont_us_logo_width"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/form_tv_size"
                        android:text="@string/empat_icon"
                         />

                    <TextView
                        android:textSize="@dimen/text_size"

                        android:id="@+id/d_per_bsnsempat"
                        android:layout_toEndOf="@+id/per_bsnsempat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

                <include layout="@layout/item_divider1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin"
                    >

                    <com.LeelaGroup.AgrawalFedration.FontAwsome
                        android:id="@+id/per_psnalanulincome"
                        android:layout_width="@dimen/cont_us_logo_width"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/form_tv_size"
                        android:text="@string/dollar_icon"
                         />



                    <TextView
                        android:textSize="@dimen/text_size"
                        android:id="@+id/d_per_psnalanulincome"
                        android:layout_toEndOf="@+id/per_psnalanulincome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
